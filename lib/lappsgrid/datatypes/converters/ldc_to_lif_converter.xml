<tool id='convert.gigaword2xml' name='LDC/XML to LIF' version='2.0.0'>
  <description>Converts the LDC/XML format to LIF.</description>
  <requirements>
      <requirement type="package" version="2.2.3">java-lsd</requirement>
  </requirements>
  <command>lsd $__tool_directory__/ldc2lif.lsd $input $output</command>
  <inputs>
    <param name='input' type='data' format='ldc' label='input' />
  </inputs>
  <outputs>
    <data name='output' format='lif' />
  </outputs>
  <help>Converts the LDC/XML format to the LAPPS Interchange Format (LIF).</help>
</tool>